<h1>Burger!</h1>

<h2>Burgers that are not Ready!</h2>

<ul>
 {{#each burger_data}}
    {{#if devour}}
      {{>burgers/burger-block devour=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Burgers that are ready!</h2>

<ul>
  {{#each burger_data}}
    {{#if devour}}
      {{>burgers/burger-block devour=true}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="burger_data">
  </div>

  <div class="form-group">
    <label for="devour">Ready ?</label><br>
    <input type="radio" name="devour" value="1" checked> Ready!<br>
    <input type="radio" name="devour" value="0"> Awake
  </div>

  <button type="submit">Add Burger</button>
</form>


